<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="310dp"
    android:background="@drawable/sdk_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/moblie_hint_str04"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dialog_mzol_close_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:src="@drawable/close" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pay_title_devider_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_mzol_content1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/shop_mzpay_dialog_str"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/dialog_mzol_content2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/shop_mzpay_dialog_str"
        android:textColor="#686868"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_mzol_content3_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/shop_mzpay_dialog_str"
        android:textSize="16sp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pay_title_devider_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/dialog_mzolpay_neg_bt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="其他方式"
            android:textColor="#ffffff"
            android:background="@drawable/bt_bg" />
        <Button
            android:id="@+id/dialog_mzolpay_pos_bt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/dialog_mzolpay_neg_bt"
            android:text="立刻充值"
            android:textColor="#ffffff"
            android:background="@drawable/bt_bg" />
    </RelativeLayout>

</LinearLayout>