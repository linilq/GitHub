<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/xdw_white" >

    <ImageView
        android:id="@+id/pay_payway_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/pay_alipay_icon" />

    <TextView
        android:id="@+id/pay_payway_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/pay_payway_item_icon_iv"
        android:textColor="#6a6a6a"
        android:text="支付宝"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/pay_payway_item_arrow"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/pay_payway_item_icon" />

    <TextView
        android:id="@+id/pay_payway_item_other_tv"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/pay_payway_item_arrow"
        android:textColor="@color/mz_text_thj" />

</RelativeLayout>